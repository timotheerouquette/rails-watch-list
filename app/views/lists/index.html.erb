<head>
  <meta charset="UTF-8">
  <title>My movies lists</title>
</head>

<body>
  <div class="banner">
    <div class="container">
      <h1><strong>My movies lists 🍿</strong></h1>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @lists.each do |list| %>

          <%= link_to list_path(list) do %>
          <div class="card card-list">
            <strong><%= list.name %></strong>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="container center">
    <%= link_to new_list_path do %>
      <div class="btn btn-primary">
        Create new list
      </div>
    <% end %>
  </div>
  <footer class="bg-light text-center ">

  </footer>
</body>
